<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        レシピ詳細
      </h1>
    </div>
  </div>
</section>

<div class="container">
  <div class="row">
    <div class="col-4">
      <figure class="image is-128x128"  style="margin-left: auto; margin-right: auto;">
              <%= attachment_image_tag @user, :profile_image, fallback: "no-image.jpg", class: "profile_image is-rounded" %>
            </figure>
    </div>
    <div class="col-8 text-left">
      <h1><%= @recipe.user.username %></h1>
      <%
    </div>
  </div>
</div>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= attachment_image_tag @recipe, :image %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @recipe.title %></p>
              </div>
            </div>
            
            <div class="recipe">
              <table class="table is-narrow recipe__inner">
                <tr>
                  <th>材料</th>
                </tr>
                <tr>
                  <td><%= simple_format @recipe.spice %></td>
                </tr>
              </table>

              <table class="table is-narrow recipe__inner space">
                <tr>
                  <th>分量</th>
                </tr>
                <tr>
                  <td><%= simple_format @recipe.quantity %></td>
                </tr>
              </table>
            </div>

            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>レシピ</th>
                </tr>
                <tr>
                  <td><%= simple_format @recipe.body %></td>
                </tr>
              </table>
              <% if @recipe.user.id == current_user.id %>
                <%= link_to "編集画面へ", edit_recipe_path(@recipe), class: "button is-success" %>
              <% end %>

              <% if current_user.already_favorited?(@recipe) %>
                <%= link_to recipe_favorites_path(@recipe), method: :delete do %>
                  <i class="fas fa-heart"></i>
                <% end %>
              <% else %>
                <%= link_to recipe_favorites_path(@recipe), method: :create do %>
                  <i class="far fa-heart"></i>
                  <% end %>
              <% end %>
              <%= @recipe.favorites.count %>

              <%= form_for [@recipe, @comment] do |f| %>
                <%= f.text_field :content %>
                <br>
                <%= f.submit 'コメントする' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>